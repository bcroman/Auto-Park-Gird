{
  "meta": {
    "version": 1,
    "gameId": "css-grid-tool",
    "defaultGrid": {
      "columns": 7,
      "rows": 7
    },
    "validationDefaults": {
      "tolerancePx": 2,
      "minOverlapRatio": 0.98
    }
  },
  "levels": [
    {
      "id": "L1",
      "title": "Level 1 — Grid Columns",
      "concept": {
        "name": "grid-column start and end",
        "explain": "Parking spots are defined by grid lines. Use grid-column to position the car between the correct column lines, and keep the row fixed."
      },
      "ui": {
        "prompt": "Move the car into the highlighted spot using grid-column, while keeping it on row 1.",
        "starterCss": ".car {\n grid-row: 1 / 2;\n}\n",
        "lockedCss": "/* Locked */\n.grid { display: grid; }\n",
        "hints": [
          "Try: grid-column: 3 / 4;",
          "Also set: grid-row: 1 / 2;"
        ]
      },
      "grid": { "columns": 7, "rows": 7 },
      "entities": [
        {
          "id": "car",
          "type": "player",
          "className": "car",
          "baseCss": "border-radius: 10px;"
        },
        {
          "id": "spot",
          "type": "target",
          "className": "spot",
          "baseCss": "background: rgba(200, 0, 0, 0.22); outline: 2px dashed rgba(200, 0, 0, 0.8); border-radius: 10px;"
        }
      ],
      "layout": {
        "initial": {
          "car": { "gridColumn": "1 / 2", "gridRow": "1 / 2" },
          "spot": { "gridColumn": "3 / 4", "gridRow": "1 / 2" }
        }
      },
      "winCondition": {
        "movingEntityId": "car",
        "targetEntityId": "spot"
      }
    },

    {
      "id": "L2",
      "title": "Level 2 — Grid Rows",
      "concept": {
        "name": "grid-row start and end",
        "explain": "Use grid-row to move and span the car vertically between row lines."
      },
      "ui": {
        "prompt": "Move the car vertically and make it span the full highlighted spot using grid-row.",
        "starterCss": ".car {\n grid-column: 1 / 2;\n}\n",
        "lockedCss": "/* Locked */\n.grid { display: grid; }\n",
        "hints": [
          "Try: grid-row: 3 / span 3;",
          "Keep the same column and focus on vertical placement."
        ]
      },
      "grid": { "columns": 7, "rows": 7 },
      "entities": [
        { "id": "car", "type": "player", "className": "car", "baseCss": "border-radius: 10px;" },
        {
          "id": "spot",
          "type": "target",
          "className": "spot",
          "baseCss": "background: rgba(200, 0, 0, 0.22); outline: 2px dashed rgba(200, 0, 0, 0.8); border-radius: 10px;"
        }
      ],
      "layout": {
        "initial": {
          "car": { "gridColumn": "1 / 2", "gridRow": "1 / 2" },
          "spot": { "gridColumn": "1 / 2", "gridRow": "3 / 6" }
        }
      },
      "winCondition": {
        "movingEntityId": "car",
        "targetEntityId": "spot"
      }
    },

    {
      "id": "L3",
      "title": "Level 3 — Two-Axis Spanning",
      "concept": {
        "name": "combine grid-column and grid-row",
        "explain": "This spot is larger in both directions. Combine horizontal and vertical spanning to match it exactly."
      },
      "ui": {
        "prompt": "Use both grid-column and grid-row so the car covers the entire 2×2 spot.",
        "starterCss": ".car {\n \n}\n",
        "lockedCss": "/* Locked */\n.grid { display: grid; }\n",
        "hints": [
          "Try: grid-column: 5 / 7;",
          "Then add: grid-row: 2 / 4;"
        ]
      },
      "grid": { "columns": 7, "rows": 7 },
      "entities": [
        { "id": "car", "type": "player", "className": "car", "baseCss": "border-radius: 10px;" },
        {
          "id": "spot",
          "type": "target",
          "className": "spot",
          "baseCss": "background: rgba(200, 0, 0, 0.22); outline: 2px dashed rgba(200, 0, 0, 0.8); border-radius: 10px;"
        }
      ],
      "layout": {
        "initial": {
          "car": { "gridColumn": "1 / 2", "gridRow": "1 / 2" },
          "spot": { "gridColumn": "5 / 7", "gridRow": "2 / 4" }
        }
      },
      "winCondition": {
        "movingEntityId": "car",
        "targetEntityId": "spot"
      }
    }
  ]
}