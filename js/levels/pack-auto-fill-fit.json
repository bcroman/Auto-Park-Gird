      "title": "Level 16 — Auto-Fill Columns",
      "concept": {
        "name": "repeat(auto-fill, minmax())",
        "explain": "Use auto-fill to create as many explicit columns as can fit, each with a minimum track size."
      },
      "ui": {
        "prompt": "Keep the car in column 1 / row 2 and resize tracks using auto-fill so it matches the highlighted wider bay.",
        "starterCss": ".car {\n grid-column: 1 / 2;\n grid-row: 2 / 3;\n}\n\n.grid {\n \n}\n",
        "lockedCss": "/* Locked */\n.grid { display: grid; }\n",
        "hints": [
          "Try: .grid { grid-template-columns: repeat(auto-fill, minmax(80px, 1fr)); }",
          "Keep the car placement the same and adjust only track sizing."
        ]
      },
      "preview": { "fixedWidthPx": 450, "fixedHeightPx": 450 },
      "grid": { "columns": 7, "rows": 7 },
      "entities": [
        {
          "id": "car",
          "type": "player",
          "className": "car",
          "baseCss": "border-radius: 10px;"
        },
        {
          "id": "spot",
          "type": "target",
          "className": "spot",
          "baseCss": "background: rgba(200, 0, 0, 0.22); outline: 2px dashed rgba(200, 0, 0, 0.8); border-radius: 10px; min-width: 80px; justify-self: stretch;"
        }
      ],
      "layout": {
        "initial": {
          "car": { "gridColumn": "1 / 2", "gridRow": "1 / 2" },
          "spot": { "gridColumn": "1 / 2", "gridRow": "2 / 3" }
